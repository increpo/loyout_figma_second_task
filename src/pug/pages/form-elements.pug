extends ../layout/main
include ../includes/mixins/form-elements

block variables
  - var currentURL = 'form-elements.html';
  - var title = 'Form Elements';

block content
  .formElements
    .forms
      .light
        +textForm('TEXT FIELD', desc= 'DEFAULT', cont= 'Email')
      +textForm('TEST FIELD', 'HOVER/FOCUS', 'This is pretty awesome')
      +formMenu('DROPDOWN', 'DEFAULT', 'Сколько гостей', 'keyboard_arrow_down')
      .light
        +textForm('MASKED TEXT FIELD', 'DEFAULT', 'ДД.ММ.ГГГГ')
      .mini
        +formMenu('DATE DROPDOWN', '', 'ДД.ММ.ГГГГ', 'keyboard_arrow_down')
        +formMenu('DATE DROPDOWN', '', '19.08.2019', 'expand_more')
      .form75
        +formMenu('FILTER DATE DROPDOWN', '', '19 авг-23 авг', 'keyboard_arrow_down')
        .sub
          +formMenu('SUBSCIPTION TEXT DROPDOWN', '', 'Email', 'arrow_forward')
        
          
    .buttons
      .checkBox
        +checkList('CHECKBOX BUTTONS', '')
          .checkContent
            +checkItem('Можно курить')
            +checkedItem('Можно с питомцами')
            +checkedItem('Можно пригласить гостей (до 10 человек)')
      .radioButtons
        +formHead('RADIO BUTTONS')
        .radioItems
          .checked
            +radioItem('radio_button_checked', 'Мужчина')
          +radioItem('radio_button_unchecked', 'Женщина')
      .toggleButtons
        +formHead('TOGGLE')
        .toggleItems
          .checked
            +toggleItem('Получать спецпредложения')
          +toggleItem('Получать спецпредложения')
      .likeButtons
        +formHead('LIKE BUTTON')
        .likeItems
          +likeItem('favorite_border', '2')
          .liked
            +likeItem('favorite', '12')
      .rateButtons
        +formHead('RATE BUTTON')
        .rateContent
          +rateItem(4, 1)
          +rateItem(5)      
          
           
    .sliders
      .rangeSliders
        +formHead('range slider', '5 000Р - 10 000Р')
        .sliderContent
          +slider 
      .btns 
        +formHead('buttons')
        .buttonItems
          .button
            +btn
          .btnHov
            +btn
          .btnBord
            +btn
          .btnBordHov
            +btn
        .buttonsText
          .btnText click me
          .btnTextHov click me
        +btnPay
      .pagination
        +formHead('pagination')
        +pag
        .comment 1-12 из 100+ вариантов аренды
    
    
  
  .formElements
    .forms
      +formMenu('DROPDOWN', 'DEFAULT', '2 спальни, 2 кровати...', 'expand_more')
      .dropCont
        +formMenu('dropdown', 'EXPANDED', '2 спальни, 2 кровати...', 'expand_more')
          hr
          +drop('спальни', '2')
          +drop('кровати', '2')
          .light
            +drop('ванные комнаты', '0')
  
    
    .buttons
      .drop100    
        .dropCont
          +formMenu('dropdown', '', 'Сколько гостей', 'expand_more')
            hr
            .light
              +drop('взрослые', '0')
            .light
              +drop('дети', '0')
            .light
              +drop('младенцы', '0')
            +decision('', 'применить')
            
          

    .sliders
      .drop100    
        .dropCont
          +formMenu('dropdown', '', '3 гостя', 'expand_more')
            hr
            +drop('взрослыеббб', '2')
            +drop('дети', '1')
            .light
              +drop('младенцы', '0')
            +decision('очистить', 'применить')      
      


          
  .formElements
    .forms
      +checkList('expandable checkbox list', 'expand_more')
      +checkList('expandable checkbox list', 'expand_lesS')
        .listContent
          .checkContent
            +checkItem('Завтрак')
            +checkedItem('Письменный стол')
            +checkedItem('Стул для кормления')
            +checkedItem('Кроватка')
            +checkItem('Телевизор')
            +checkItem('Шампунь')
            +checkItem('Телевизор')
            +checkItem('Шампунь')
      
        
    .buttons
      .checkRich
        +formHead('rich CHECKBOX buttons', '')
        .richItems
          .richItem
            +checkItem('Широкий коридор')
            .desc Ширина коридоров в номере не менее 91 см.
          .richItem
            +checkItem('Помощник для инвалидов')
            .desc На 1 этаже вас встретит специалист и проводит до номера.
    
    
    
    .sliders
      .bulletList
        +formHead('bullet list', '')
        .bulletItems
          +bulletItem('Нельзя с питомцами')
          +bulletItem('Без вечеринок и мероприятий')
          +bulletItem('Время прибытия - после 13:00, а выезд до 12:00')
          
  .blogElements
    .forms
      +addition('mood', 'Комфорт', 'Шумопоглощающие стены')
      +addition('location_city', 'Удобство', 'Окно в каждой из спален')
    .blog
      .blogItems
        +blogItem('/assets/img/userPhoto.png', 'Мурад Сафаров', '5 дней назад')
        +blogLike('favorite', '12', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплементы повару - никто не жаловался из соседей.')
          
      
