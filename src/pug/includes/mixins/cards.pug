mixin card_calendar
  .calendar    
    .calendar__head
      .head__item arrow_back
      .head__item-text Август 2019
      .head__item arrow_forward
    .calendar__content
      .calendar__content-weeks
          each i in ['Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб', 'Вс']
            p= i
      .calendar__content-days
        p.light 29
        p.light 30
        p.light 31
        - for (var x = 1; x < 32; x++)
          p= x
        p.light 1
      .calendar__slider
      .calendar__decision
        .decision-clear очистить
        .decision-apply применить

