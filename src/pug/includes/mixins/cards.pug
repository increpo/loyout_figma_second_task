mixin card_calendar
  .calendar    
    .calendar__head
      .head__item arrow_back
      .head__item-text Август 2019
      .head__item arrow_forward
    .calendar__content
      .calendar__content-weeks
          each i in ['Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб', 'Вс']
            p= i
      .calendar__content-days
        div.dayCont.light
          p 29
        div.dayCont.light
          p 30
        div.dayCont.light
          p 31
        - for (var x = 1; x < 32; x++)
          if x==19 || x==23
            div.dayCont
              p.checked= x
          else if x==8
            div.dayCont
              p.today= x
          else
            div.dayCont
              p= x
        div.dayCont.light
          p 1
      .calendar__decision
        .decision-clear очистить
        .decision-apply применить
      .calendar__slider

