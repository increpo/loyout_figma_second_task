mixin card__show__room(content= [{room__photo: '/assets/img/888.png', room__number: '', room__class: '', room__price: '', rating__star_full: 4, rating__star_empty: 1, room__review: 0}])
  each cont in content
    .show__room
      .room__slider
        .img__conteiner
          img(src= cont.room__photo)
        .slider__btn.left keyboard_arrow_left
        .slider__btn.right keyboard_arrow_right
        .slider__status
          .round.filled
          .round
          .round
          .round
      .room__info
        .room__info__main
          .room__info-number №
            span= ' ' + cont.room__number
            span= ' ' + cont.room__class
          .room__info-price= cont.room__price + "₽"
            span  в сутки
        .room__info-line
        .room__grade
          .room__grade__rating  
            - for (var x = 0; x < cont.rating__star_full; x++)
              .item star
            - for (var x = 0; x < cont.rating__star_empty; x++)
              .item star_border
          .room__grade__review= cont.room__review
            span  Отзывов
          
